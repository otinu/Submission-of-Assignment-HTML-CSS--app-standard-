<head>
 <link href="../assets/stylesheets/index.css" rel="stylesheet">
</head>

<body>

<header>
    <def class="head">Books</def>
</header>

<table>
  <thead>
    <tr>
     <th>題名</th>
     <th>感想</th>
     <th colspan="3"></th>
    </tr>
  </thead>

<!-- ここから、ループ処理の記述 -->
<tbody>

 <% @books.each do |f| %>
  <tr>
      <td><%= f.本のタイトル %></td>
      <td><%= f.感想 %></td>
      <td><%= link_to 'Show', book_path(@books) %></td>
      <td><%= link_to 'Edit', edit_book_path(@books) %></td>
      <td><%= link_to 'Destroy', book_path(@books), method: :delete %></td>
  </tr>
 <% end %>
</tbody>


</table>


<h2>新規投稿</h2>
<%= form_with model:@book, local:true do |f| %>

<h4>題名</h4>
<%= f.text_field :本のタイトル %>
<h4>感想</h4>
<%= f.text_field :感想 %>
<%= f.submit '投稿' %>

<% end %>





</body>


